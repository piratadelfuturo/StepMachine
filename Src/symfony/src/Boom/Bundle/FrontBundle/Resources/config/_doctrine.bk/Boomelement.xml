<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Boom\FrontBundle\Entity\Boomelement" table="boomelement">
        
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        
        <field name="title"  type="string" length="140" />
        <field name="content" type="text" />
        <field name="position" type="integer" />        
                
        <many-to-one field="boom" target-entity="Boom" inversed-by="elements">
            <join-column nullable="false" name="boom_id" referenced-column-name="id" on-delete="CASCADE" on-update="CASCADE"/>
        </many-to-one>
        
        <many-to-one field="image" target-entity="Image">
            <join-column name="image_id" referenced-column-name="id" />
        </many-to-one>
        
    </entity>
</doctrine-mapping>