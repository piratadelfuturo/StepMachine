
{% block body %}

<h1>Boom list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Slug</th>
            <th>Title</th>
            <th>Summary</th>
            <th>Date_created</th>
            <th>Date_published</th>
            <th>Nsfw</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('boom_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.summary }}</td>
            <td>{% if entity.datecreated %}{{ entity.datecreated|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.datepublished %}{{ entity.datepublished|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.nsfw }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('boom_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('boom_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('boom_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock%}
