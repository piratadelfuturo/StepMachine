{% extends "::base.html.twig" %}
{% block body %}
<h1>Boom</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Summary</th>
            <td>{{ entity.summary }}</td>
        </tr>
        <tr>
            <th>Date_created</th>
            <td>{{ entity.datecreated|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Date_published</th>
            <td>{{ entity.datepublished|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Nsfw</th>
            <td>{{ entity.nsfw }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('boom') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('boom_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('boom_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
